<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowActionBarOverlay">true</item>

        <item name="android:statusBarColor">@color/foreground_color</item>
        <item name="android:navigationBarColor">@color/background_color</item>

        <item name="colorPrimary">@color/text_color</item>

        <item name="foreground_color">@color/foreground_color</item>
        <item name="history_background_color">@color/history_background_color</item>

        <item name="text_color">@color/text_color</item>
        <item name="text_second_color">@color/text_second_color</item>
        <item name="text_third_color">@color/text_third_color</item>

        <item name="button_color">@color/button_color</item>
        <item name="button_symbol_color">@color/button_symbol_color</item>
        <item name="button_clear_color">@color/button_clear_color</item>
        <item name="button_equals_color">@color/button_equals_color</item>
        <item name="button_ripple_color">@color/button_ripple_color</item>

        <item name="separator_color">@color/background_color</item>
        <item name="about_button_color">@color/button_color</item>

        <!--<item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.LargeComponent</item>-->

    </style>

    <style name="AmoledTheme" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowActionBarOverlay">true</item>

        <item name="android:statusBarColor">@color/amoled_foreground_color</item>
        <item name="android:navigationBarColor">@color/amoled_background_color</item>

        <item name="colorPrimary">@color/amoled_text_color</item>
        <item name="android:colorBackground">@color/amoled_background_color</item>

        <item name="foreground_color">@color/amoled_foreground_color</item>
        <item name="history_background_color">@color/amoled_history_background_color</item>

        <item name="text_color">@color/amoled_text_color</item>
        <item name="text_second_color">@color/amoled_text_second_color</item>
        <item name="text_third_color">@color/amoled_text_third_color</item>

        <item name="button_color">@color/amoled_button_color</item>
        <item name="button_symbol_color">@color/amoled_button_symbol_color</item>
        <item name="button_clear_color">@color/amoled_button_clear_color</item>
        <item name="button_equals_color">@color/amoled_button_equals_color</item>
        <item name="button_ripple_color">@color/amoled_button_ripple_color</item>

        <item name="separator_color">@color/amoled_separator_color</item>
        <item name="about_button_color">@color/amoled_text_third_color</item>
    </style>

    <style name="MaterialYouTheme" parent="AppTheme">
        <item name="android:statusBarColor">@color/material_dynamic_secondary90</item>

        <item name="foreground_color">@color/material_dynamic_secondary90</item>
        <item name="history_background_color">@color/material_dynamic_secondary95</item>

        <item name="button_color">@color/material_dynamic_neutral95</item>
        <item name="button_symbol_color">@color/material_dynamic_secondary90</item>
        <item name="button_clear_color">@color/material_dynamic_tertiary90</item>
        <item name="button_equals_color">@color/material_dynamic_primary90</item>

        <item name="about_button_color">@color/material_dynamic_tertiary90</item>
    </style>

    <style name="RobotoFontCondensedLight" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="RobotoFontCondensedMedium" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="CalculatorButton" parent="Widget.Material3.Button">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@drawable/circle</item>
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:textSize">@dimen/calculator_button_text_size</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/button_horizontal_margin</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">@dimen/button_vertical_margin</item>
        <item name="android:includeFontPadding">false</item>
        <!-- cancel out material3 -->
        <item name="backgroundTint">@null</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- used in landscape -->
    <style name="CalculatorButton.Small">
        <item name="android:textSize">@dimen/calculator_button_text_size</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="CalculatorButton.Function">
        <item name="android:textSize">@dimen/calculator_button_function_text_size</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <!-- PI breaks without this -->
        <item name="android:textAllCaps">false</item>
    </style>

