<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/light_foreground_color</item>

        <item name="foreground_color">@color/light_foreground_color</item>
        <item name="background_color">@color/light_background_color</item>
        <item name="text_color">@color/light_text_color</item>
        <item name="text_second_color">@color/light_text_second_color</item>
        <item name="button_color">@color/light_button_color</item>
        <item name="button_symbol_color">@color/light_button_symbol_color</item>
        <item name="button_clear_color">@color/light_button_clear_color</item>
        <item name="button_equals_color">@color/light_button_equals_color</item>
        <item name="button_ripple_color">@color/light_button_ripple_color</item>
    </style>

    <!-- dark application theme. -->
    <style name="darkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/dark_foreground_color</item>

        <item name="foreground_color">@color/dark_foreground_color</item>
        <item name="background_color">@color/dark_background_color</item>
        <item name="text_color">@color/dark_text_color</item>
        <item name="text_second_color">@color/dark_text_second_color</item>
        <item name="button_color">@color/dark_button_color</item>
        <item name="button_symbol_color">@color/dark_button_symbol_color</item>
        <item name="button_clear_color">@color/dark_button_clear_color</item>
        <item name="button_equals_color">@color/dark_button_equals_color</item>
        <item name="button_ripple_color">@color/dark_button_ripple_color</item>
    </style>

    <style name="RobotoFontCondensedLight" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="RobotoFontCondensedMedium" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>